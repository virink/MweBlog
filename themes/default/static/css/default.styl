@import url("//cdn.bootcss.com/normalize/7.0.0/normalize.min.css")
@import url("//cdn.bootcss.com/animate.css/3.5.2/animate.min.css")
@import url("//cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css")
@import url("//cdn.bootcss.com/github-markdown-css/2.10.0/github-markdown.min.css")
@import url("//cdn.bootcss.com/highlight.js/9.11.0/styles/monokai-sublime.min.css")

/**
 * common
 */

a
    text-decoration none
    color #aaa

ul, li
    list-style none

.divider__base
    margin 10px auto
    border-top 1px solid #fff2
    // width 100%
    
.divider

    &__90
        @extend .divider__base
        width 90%
    
    &__70
        @extend .divider__base
        width 70%
    
    &__50
        @extend .divider__base
        width 50%

.label 
    position relative
    display inline-block
    padding 8px 18px 9px
    background #069
    border-radius 3px
    color #FFF


body
    background #333
    color #aaa
    
    .wrapper  
        overflow hidden
        position relative

/**
 * header
 */
 
header
    top 0
    left 0
    display block
    transition 0.8s
    text-align center
    padding 10px 10px 0px
        
    .header
        
        img
            width 120px
            border-radius 50%
            border 3px solid #eee
            vertical-align middle
            
        .title
            font-size 32px
            
        .subtitle
            font-size 18px
    
    nav
        display block
        padding 10px 30px
        
        li
            position relative
            display inline-block
            padding 0 10px
            @media (max-width 412px)
                padding 0
        

    .social
        display block
        margin 0
        
        &__item
            padding 10px
            margin 0 3px
            // height 20px
            width 20px
            line-height 1em
            display inline-block
            border 1px #FFF solid
            border-radius 20px
            
            a 
                display block
                color #FFF
                opacity .8
                
                .label
                    display none

/**
 * content
 */
 
.content 
    text-align center

.article
    padding 20px
    margin: 30px
    position: relative;
    border 5px solid #fff
    border-radius 20px
    text-align left
    
    &-title
        font-size 32px
        
    &-tag
        text-align center
        margin 10px
        
        &-item
            display inline-block
            height 20px
            line-height 20px
            padding 5px 10px
            text-align center
            margin 5px
            border 2px double #eee
            border-radius 10px
            color #FFFFFF
            font-size 18px
            letter-spacing 2px
            cursor pointer
    
    &-meta
        height 20px
        font-size 18px
        text-align center
    
    &-about
        span
            color red
            margin-left 20px
    
        dl
            margin-left 100px
            
            dt 
                color #ccc
                float left
                font-weight bold
                padding 5px
                width 280px
            
            dd
                padding 5px 0
        
        progress
                
            width 500px
            background #333
            border-radius 25px
            
            &::-webkit-progress-bar 
        
                border-radius 25px
                background #333
            
            
            &::-webkit-progress-value
            
                border-radius 25px
                background-image -webkit-linear-gradient( 135deg, transparent, transparent 33%, rgba(0,0,0,.1) 33%, rgba(0,0,0,.1) 66%, transparent 66%),-webkit-linear-gradient( top, rgba(255, 255, 255, .25), rgba(0,0,0,.2)),-webkit-linear-gradient( left, #09c, #ff0);
    
    &-date
        float left
        
    &-more
        float right

    &-content
        padding 10px 20px
        margin 10px
        background #fffc
        border 2px double #aaa
        border-radius 30px
        
        pre
            background-color #000c

    &-copyright 
        width 85%
        max-width 45em
        margin 1.2em auto 0
        padding .5em 1.8em
        border 1px solid #d3d3d3
        font-size .93em
        line-height 1.6em
        word-break break-all
        background rgba(255,255,255,.1)
        

.toc 
    top 200px
    right 10px
    position fixed
    border 1px dashed #eee
    color #fff
    text-align left
    background #0009

    ul 
        margin 0
        padding 0
        list-style none

    li 
        padding 5px 10px

    a 
        color #fff
        text-decoration none
        display block

    &-h2 
        padding-left 10px

    &-h3 
        padding-left 20px

    &-h4 
        padding-left 30px

    &-h5 
        padding-left 40px

    &-h6
        padding-left 50px

    &-visible 
        background #fff9
        
        a
            color #000

.tagscloud 
    // width 640px
    // height 480px
    margin 10px auto

.achives
    
    &-year
        font-size 2em
    
    &-month
        // border 2px solid #00f9
        padding 10px
        margin 10px
        
        &-title
            background #0f05
            color violet
            // border 2px solid #00f9
            border-radius 20px
            font-weight bold
            font-size 1.8em
            // text-align left


/**
 * footer
 */

footer
    display block
    padding 2em 0
    border-top 2px solid #ddd
    font-size .7em
    color #b3b3b3
    
    .&__copyright 
        display block
        margin-bottom .7em

.pagination
    @extend header nav
    text-align center
    font-size 24px
    color #eee
    font-family Tahoma, Arial, Helvetica, Sans-serif
    display: inline-flex;
    
    li
        border 1px solid #ddd
        border-radius 80%
        padding 8px
        margin 5px
        
        &:hover
            background-color #313131
    
    .current
        padding 2px 5px
        font-weight bold
        margin 2px
        color #fff
        background-color #313131


/**
 * Links
 */

link_width = 233px

.link
    margin 10px auto
    padding 20px
    
    
    &-item
        border 3px solid #fff
        width link_width
        margin-bottom 10px
         
    &-img
        text-align center
        display flex
        justify-content center
        align-items center
        height link_width
        width link_width  
    img
        max-height link_width
        max-width link_width
    
    &-title
        text-align center
        font-weight bold
        // font-size 24px
        color #eee
    
    &-info
        text-indent 2em
        color #ccc
        font-size 18px
        width link_width
        word-wrap break-word
        overflow hidden

/**
 * Beautiful
 */

.markdown-body 
    img 
        max-width 100%
        box-sizing content-box
        background-color #fff
        text-align center
        margin-left auto
        margin-right auto
        display block
        padding 10px 0px 10px 0px

/**
 * 适配移动端
 */
@media (max-width 600px)
    .article
        padding 5px
        margin 5px
        border 2px solid #fff
        border-radius 10px
        
        &-content
            margin 2px
            padding 10px 5px
        
        &-title
            font-size 24px
        
        &-meta
            font-size 14px
            
        &-tag
            margin 2px
            
            &-item
                line-height 14px
                font-size 14px
                padding 5px
                border 1px solid #eee
                height 14px
        
        &-copyright
            font-size: 0.6em;
            line-height: 1.2em;
    
    .pagination
        padding 0px
        font-size 12px
        
        li
            padding 5px
    
    .toc
        display none
